@model IEnumerable<Seqrus.Web.Services.Logging.LogEntry>
@{
    ViewData["Title"] = "System log";
}

<h2>System log</h2>

<table class="table table-responsive table-striped table-condensed">
    <thead>
        <tr>
            <th>Category</th>
            <th>Timestamp</th>
            <th>Additional info</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Category</td>
                <td>@log.Timestamp</td>
                <td>@log.AdditionalInfo</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td>Total:</td>
            <td>@Model.Count() entries found</td>
        </tr>
    </tfoot>
</table>